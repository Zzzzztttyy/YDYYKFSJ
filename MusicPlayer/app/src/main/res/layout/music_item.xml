            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_music_item_menu"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/music_item_menu" />
    </RelativeLayout>

</LinearLayout>